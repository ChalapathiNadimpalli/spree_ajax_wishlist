<script>
    $(document).ready(function(){
        $.getJSON('<%= in_wishlist_ajax_wishlists_path(product_id: @product.id) %>', function(data){
            var active = false;
            if (data.result.toString() == 'true') {
                active = true;
            }
            console.log(active);
            set_wishlist_icon('<%= @product.id %>', active);
            $('.ajax-wishlist-icon .wishlist-icon').fadeIn(100);
            $('button.wishlist-icon').click(function(){
                $(this).toggleClass('active');
            });
        }).fail(function() {
        });
    });
</script>
